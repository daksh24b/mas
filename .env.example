# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=veriflow_claims

# OpenAI API (for embeddings if not using local models)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=50MB

# Model Configuration
USE_LOCAL_MODELS=true
CLIP_MODEL=openai/clip-vit-base-patch32
WHISPER_MODEL=base

# Trust Score Thresholds
TRUST_SCORE_HIGH=0.7
TRUST_SCORE_MEDIUM=0.4
TRUST_SCORE_LOW=0.0
